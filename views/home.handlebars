<head>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-160639533-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-160639533-1');
  </script>

  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.15.0/d3.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js"></script>
  <title>Coronavirus COVID-19 Tracker</title>
</head>

<div id="content">

  <h1>Coronavirus COVID-19 Tracker</h1>


  <div id="dashboard">

    <div id="dashboard-left">

      <div id="top-value">
        <div id="top-value-header">
          Total Confirmed
        </div>
        <div id="top-value-value"></div>
      </div>

      <header id="top-chart-header">Confirmed By Country</header>

      <div id="top-chart-container">
        <table class="top-chart">
          {{#each confirmed_by_country}}
          {{#unless_eq @index 0}}
          <tr>
            <td class="count">{{this.[1]}}</td>
            <td class="country">{{this.[0]}}</td>
          </tr>
          {{/unless_eq}}
          {{/each}}
        </table>
      </div>
    </div>


    <div id="chart-wrapper">
      <header>Confirmed Cases by Country (without China)</header>
      <div id="chart"></div>
    </div>

  </div>

  <h2>Confirmed By Region</h2>
  <table class="data-chart">
    {{#each confirmed}}
    <tr>
      {{#each this}}
        {{#if_eq @index 0}}
          <td class="region-or-country">{{this}}</td>
        {{else if_eq @index 1}}
          <td class="region-or-country">{{this}}</td>
        {{else}}
          <td>{{this}}</td>
        {{/if_eq}}
      {{/each}}
    </tr>
    {{/each}}
  </table>

  <h2>Confirmed By Country</h2>
  <table class="data-chart">
    {{#each confirmed_by_country}}
    <tr>
      {{#each this}}
        {{#if_eq @index 0}}
          <td class="region-or-country">{{this}}</td>
        {{else}}
          <td>{{this}}</td>
        {{/if_eq}}
      {{/each}}
    </tr>
    {{/each}}
  </table>

  <h2>Deaths By Country</h2>
  <table class="data-chart">
    {{#each deaths_by_country}}
    <tr>
      {{#each this}}
        {{#if_eq @index 0}}
          <td class="region-or-country">{{this}}</td>
        {{else}}
          <td>{{this}}</td>
        {{/if_eq}}
      {{/each}}
    </tr>
    {{/each}}
  </table>


  <script>
    const DATA = {{{data_json_string}}};
  </script>

  <script src="/js/main.js"></script>


</div>